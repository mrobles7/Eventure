<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.eventure.EventActivity">

    <EditText
        android:id="@+id/txtEnd"
        android:layout_width="99dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="End Time"
        android:inputType="time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEvent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/txtStart"
        android:layout_width="99dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Start Time"
        android:inputType="time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEvent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEvent"
        app:layout_constraintLeft_toRightOf="@+id/txtStart"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txtEnd"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDate" />

    <EditText
        android:id="@+id/txtEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:ems="10"
        android:hint="Title of Event"
        android:inputType="textNoSuggestions"
        android:text="Name of Event"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.573" />

    <EditText
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text="Date"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStart"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/txtLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:text="Location"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDate"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/txtNotif"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        android:text="Notification Time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLoc"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="203dp"
        tools:layout_editor_absoluteX="60dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/txtNote"
        android:layout_width="303dp"
        android:layout_height="94dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Notes"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNotif"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:clickable="true"
        tools:layout_editor_absoluteX="136dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNote"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
